#include "iostream"
#include "cstdlib"
#include "string"
using namespace std;
int main() {
	setlocale(LC_ALL,"Portuguese");
string resp = "não";
float valor = 0, saldo = 0;
while (resp == "não")
{ cout<< "Digite valor:";
 cin >> valor;
 saldo = saldo + valor; //acumulador
 cout << "Deseja sair?";
 cin >> resp;
}
cout<< "Saldo Acumulado=" << saldo << 
endl;
}
